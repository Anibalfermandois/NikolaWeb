---
import { Image } from "astro:assets";
import Casa from "@assets/galeriaComponent/casa4.png";
import Empresa from "@assets/galeriaComponent/casa2.png";
const images = [Casa, Empresa];
const imagesText = ["CASAS", "EMPRESAS"];
---

<div class="container mx-auto px-4 py-8">
  <div class="grid grid-cols-2 gap-4">
    {
      images.map((image, i) => (
        <div class="relative overflow-hidden rounded-lg border border-white/45 shadow-lg">
          {/* Overlay Text */}
          <div class="absolute left-1/2 top-0 z-10 flex w-2/5 -translate-x-1/2 justify-center rounded-md bg-white text-xl font-bold text-secondary-80 shadow">
            {imagesText[i]}
          </div>
          {/* <span class="absolute top-0 left-1/2 -translate-x-1/2 z-10 bg-white text-secondary-80 px-4 py-0.5 rounded-md font-bold text-lg shadow">
          {imagesText[i]}
        </span> */}
          {/* Image */}
          <Image
            src={image}
            alt={imagesText[i]}
            class="h-48 w-full transform object-cover object-right opacity-50 transition-transform duration-300 hover:scale-105"
          />
        </div>
      ))
    }
  </div>
</div>
