---
import { Image } from "astro:assets";
import logo from "@assets/logo_navbar.png";
import phoneIcon from "@assets/phone-call.png";

const text = {
  inicio: "Inicio",
  servicios: "Servicios",
  financiamiento: "Financiamiento",
  nosotros: "Nosotros",
  cotizar: "Cotizar",
  numero: "+56956480000",
};
---

<nav class="fixed top-0 left-0 right-0 bg-white shadow-lg z-50">
  <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
    <div class="flex justify-between items-center h-16">
      <div class="flex-shrink-0">
        <a href="/">
          <Image src={logo} alt="logo Nikola" width={130} height={100} />
        </a>
      </div>

      <!-- Desktop Navigation -->
      <div class="hidden md:flex items-center space-x-8">
        <a
          href="/#inicio"
          class="text-secondary-100 hover:text-primary-100 transition-colors font-medium"
        >
          {text.inicio}
        </a>
        <a
          href="/#servicios"
          class="text-secondary-100 hover:text-primary-100 transition-colors font-medium"
        >
          {text.servicios}
        </a>
        <a
          href="/#financiamiento"
          class="text-secondary-100 hover:text-primary-100 transition-colors font-medium"
        >
          {text.financiamiento}
        </a>
        <a
          href="/#nosotros"
          class="text-secondary-100 hover:text-primary-100 transition-colors font-medium"
        >
          {text.nosotros}
        </a>
        <a
          href="tel:+1234567890"
          class="block px-5 py-2 text-secondary-100 hover:text-primary-100 transition-colors font-bold"
        >
          <span
            ><Image
              class="inline text-primary-100 fill-current"
              src={phoneIcon}
              alt="phone icon"
              width={20}
            />
            {text.numero}</span
          >
        </a>
        <a
          href="/cotizar"
          class="bg-primary-100 text-white px-6 py-2 rounded-lg hover:bg-primary-100 transition-colors font-medium"
        >
          {text.cotizar}
        </a>
      </div>

      <!-- Mobile menu button -->
      <div class="md:hidden">
        <button
          id="mobile-menu-button"
          class="text-secondary-100 hover:text-primary-100"
        >
          <svg
            class="h-6 w-6"
            fill="none"
            viewBox="0 0 24 24"
            stroke="currentColor"
          >
            <path
              stroke-linecap="round"
              stroke-linejoin="round"
              stroke-width="2"
              d="M4 6h16M4 12h16M4 18h16"></path>
          </svg>
        </button>
      </div>
    </div>

    <!-- Mobile Navigation -->
    <div id="mobile-menu" class="hidden md:hidden">
      <div class="px-2 pt-2 pb-3 space-y-1 sm:px-3 bg-white border-t">
        <a
          href="#inicio"
          class="block px-3 py-2 text-secondary-100 hover:text-primary-100 transition-colors font-medium"
        >
          {text.inicio}
        </a>
        <a
          href="#servicios"
          class="block px-3 py-2 text-secondary-100 hover:text-primary-100 transition-colors font-medium"
        >
          {text.servicios}
        </a>
        <a
          href="#financiamiento"
          class="block px-3 py-2 text-secondary-100 hover:text-primary-100 transition-colors font-medium"
        >
          {text.financiamiento}
        </a>
        <a
          href="#nosotros"
          class="block px-3 py-2 text-secondary-100 hover:text-primary-100 transition-colors font-medium"
        >
          {text.nosotros}
        </a>
        <a
          href="tel:+1234567890"
          class="block px-5 py-2 text-secondary-100 hover:text-primary-100 transition-colors font-bold"
        >
          <span class="text-primary-100 font-bold">ðŸ“ž</span>
          {text.numero}
        </a>
        <a
          href="/cotizar"
          class="block mx-3 mt-2 bg-primary-100 text-white px-4 py-2 rounded-lg hover:bg-primary-100 transition-colors font-medium text-center"
        >
          {text.cotizar}
        </a>
      </div>
    </div>
  </div>
</nav>
