---
import { Image } from "astro:assets";
import logo from "@assets/logo_navbar.png";
import phoneIcon from "@assets/phone-call.png";

const text = {
  inicio: "Inicio",
  servicios: "Servicios",
  financiamiento: "Financiamiento",
  nosotros: "Nosotros",
  // cotizar: "COTIZA TU PROYECTO SOLAR",
  cotizar: "COTIZA AHORA",
  numero: "+56956480000",
};
---

<nav class="fixed left-0 right-0 top-0 z-50 bg-white shadow-lg">
  <div class="mx-auto max-w-7xl px-4 sm:px-6 lg:px-8">
    <div class="flex h-16 items-center justify-between">
      <div class="flex-shrink-0">
        <a href="/">
          <Image src={logo} alt="logo Nikola" width={130} height={100} />
        </a>
      </div>

      <!-- Desktop Navigation -->
     <div class="hidden items-center space-x-4 md:flex whitespace-nowrap min-w-0 overflow-x-auto">
  <a
    href="/#inicio"
    class="font-medium text-secondary-100 transition-colors hover:text-primary-100 whitespace-nowrap"
  >
    {text.inicio}
  </a>
  <a
    href="/#servicios"
    class="font-medium text-secondary-100 transition-colors hover:text-primary-100 whitespace-nowrap"
  >
    {text.servicios}
  </a>
  <a
    href="/#financiamiento"
    class="font-medium text-secondary-100 transition-colors hover:text-primary-100 whitespace-nowrap"
  >
    {text.financiamiento}
  </a>
  <a
    href="/#nosotros"
    class="font-medium text-secondary-100 transition-colors hover:text-primary-100 whitespace-nowrap"
  >
    {text.nosotros}
  </a>
  <a
    href=`tel:+${text.numero}`
    class="block px-3 py-2 font-bold text-secondary-100 transition-colors hover:text-primary-100 whitespace-nowrap items-center space-x-2"
  >
    <span class="inline-flex items-center justify-center w-7 h-7 rounded-full ">
      <Image src={phoneIcon} alt="phone icon" width={20} />
    </span>
    <span>{text.numero}</span>
  </a>
  <a
    href="/cotizar"
    class="rounded-lg bg-primary-100 px-4 py-2 font-medium text-white transition-colors hover:bg-primary-100 whitespace-nowrap"
    style="max-width: 300px;"
  >
    {text.cotizar}
  </a>
</div>

      <!-- Mobile menu button -->
      <div class="md:hidden">
        <button
          id="mobile-menu-button"
          class="text-secondary-100 hover:text-primary-100"
        >
          <svg
            class="h-6 w-6"
            fill="none"
            viewBox="0 0 24 24"
            stroke="currentColor"
          >
            <path
              stroke-linecap="round"
              stroke-linejoin="round"
              stroke-width="2"
              d="M4 6h16M4 12h16M4 18h16"></path>
          </svg>
        </button>
      </div>
    </div>

    <!-- Mobile Navigation -->
    <div id="mobile-menu" class="hidden md:hidden">
      <div class="space-y-1 border-t bg-white px-2 pb-3 pt-2 sm:px-3">
        <a
          href="#inicio"
          class="block px-3 py-2 font-medium text-secondary-100 transition-colors hover:text-primary-100"
        >
          {text.inicio}
        </a>
        <a
          href="#servicios"
          class="block px-3 py-2 font-medium text-secondary-100 transition-colors hover:text-primary-100"
        >
          {text.servicios}
        </a>
        <a
          href="#financiamiento"
          class="block px-3 py-2 font-medium text-secondary-100 transition-colors hover:text-primary-100"
        >
          {text.financiamiento}
        </a>
        <a
          href="#nosotros"
          class="block px-3 py-2 font-medium text-secondary-100 transition-colors hover:text-primary-100"
        >
          {text.nosotros}
        </a>
        <a
          href="tel:+1234567890"
          class="block px-5 py-2 font-bold text-secondary-100 transition-colors hover:text-primary-100"
        >
          <span class="font-bold text-primary-100">ðŸ“ž</span>
          {text.numero}
        </a>
        <a
          href="/cotizar"
          class="mx-3 mt-2 block rounded-lg bg-primary-100 px-4 py-2 text-center text-xl font-medium text-white transition-colors hover:bg-primary-100"
        >
          {text.cotizar}
        </a>
      </div>
    </div>
  </div>
</nav>
